<UserControl x:Class="ReportGeneration_Markov.Items.Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReportGeneration_Markov.Items"
             mc:Ignorable="d" 
             Height="185">
    <Grid Margin="5" Background="#FFEDEDED">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Width="80" Margin="10,10,10,0" Height="90" VerticalAlignment="Top" 
               Source="/ReportGeneration_Markov;component/Images/ic-student.png"/>
        <TextBox x:Name="TBFio" Text="Мами Папи" VerticalAlignment="Top" Height="25" IsEnabled="False" Grid.Column="1"
                 Margin="10.6,10,10,0" VerticalContentAlignment="Center"/>
        <TextBox x:Name="TBGroup" Text="ИСВ-23-2" VerticalAlignment="Top" Height="25" IsEnabled="False" Grid.Column="2"
         Margin="10.6,10,10,0" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="CBExpelled" Content="Отчислен" VerticalAlignment="Top" Grid.Column="1" Margin="10,40,10,0" HorizontalAlignment="Left"
                  Width="100" IsEnabled="False"/>
        <Label Content="Выполенные работы:" VerticalAlignment="Top" Grid.Column="1" Margin="10,60,10,0" Grid.ColumnSpan="2" VerticalContentAlignment="Top"/>
        <ProgressBar x:Name="doneWorks" Value="10" Height="25" Grid.Column="1" Margin="10,86,10,0" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
        <Label Content="Посещаемость:" VerticalAlignment="Top" Grid.Column="1" Margin="10,116,10,0" Grid.ColumnSpan="2" VerticalContentAlignment="Top"/>
        <ProgressBar x:Name="missedCount" Value="10" Height="25" Grid.Column="1" Margin="10,142,10,0" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
